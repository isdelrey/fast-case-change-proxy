{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "build",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "node_modules/types"],
    "lib": ["ESNext"]
  },
  "exclude": ["tests", "build", "node_modules"],
  "compileOnSave": true
}
